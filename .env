# Web3 & Network Configurations
INFURA_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Arbitrage and Profit Thresholds
CAPITAL=100000000000  # USDT capital in smallest units (6 decimals)
TARGET_PROFIT=1500000000  # Minimum profit threshold in smallest units (e.g., $1,500 in USDT)

# 1inch API Configurations
ONEINCH_API_KEY=YOUR_1INCH_API_KEY

# Smart Contract Details
CONTRACT_ADDRESS=0xYourSmartContractAddress  # Address of your deployed Solidity contract on Polygon
WALLET_ADDRESS=0xYourWalletAddress  # Your wallet address
PRIVATE_KEY=your_private_key_for_signing_transactions  # Ensure this remains secure

# Logging and Debugging Configurations
LOG_LEVEL=info  # Set the logging level (e.g., info, warn, debug, error)
